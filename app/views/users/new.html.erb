<h1>Sign up</h1>
<%= render 'shared/errors', obj: @user %>


<div class='row'>
  <div class='col-md-12'>
  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"} ) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :username %>
      </div>
      <div class="control-label col-sm-3">
        <%= f.text_field :username, class: "form-control", placeholder: "How to call you ?", autofocus: true%>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :"E-mail"%>
      </div>
      <div class="control-label col-sm-3">
          <%= f.text_field :email, class: "form-control",placeholder: "E-Mail",autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :"First Name"%>
      </div>
      <div class="control-label col-sm-3">
          <%= f.text_field :fname, class: "form-control",placeholder: "First Name",autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :"Last Name"%>
      </div>
      <div class="control-label col-sm-3">
          <%= f.text_field :lname, class: "form-control",placeholder: "Last Name",autofocus: true %>
      </div>
    </div>


    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :Password%>
      </div>
      <div class="control-label col-sm-3">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter your password",autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :"Re-Enter Password"%>
      </div>
      <div class="control-label col-sm-3">
          <%= f.password_field :password_confirmation, class: "form-control",placeholder: "Re-Enter your password",autofocus: true %>
      </div>
    </div>


    <div class="col-sm-offset-2 col-sm-10">
  <%= f.submit  "Create Account", class: "btn btn-primary btn-lg"%>
  </div>
  </div>
  <%end%>
  <div class="col-xs-4 col-xs-offset-4">
  [<%= link_to "Cancel request", articles_path%>]
  </div>
</div>
</div>
