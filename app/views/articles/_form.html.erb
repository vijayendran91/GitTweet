<%= render 'shared/errors', obj: @article %>
<div class='row'>
  <div class='col-md-12'>
    <%= form_for(:article, url: user_articles_path) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :title %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of the Article", autofocus: true%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2">
        <%= f.label :description%>
      </div>
      <div class="col-sm-8">
          <%= f.text_area :description, class: "form-control", rows: 15,placeholder: "Body of the Article",autofocus: true %>
      </div>
    </div>
    <div class="col-sm-offset-2 col-sm-10">
  <%= f.submit  "Create Blog", class: "btn btn-primary btn-lg"%>
  </div>
  </div>
    <%end%>
</div>
